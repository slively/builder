{
	"moduleFileExtensions": [
		"ts",
		"js"
	],
	"transform": {
		"^.+\\.ts$": "./node_modules/ts-jest/preprocessor.js"
	},
	"testMatch": [
		"<rootDir>/tests/**/*.test.ts"
	],
	"modulePaths": ["<rootDir>"],
	"testEnvironment": "node",
	"coverageDirectory": "<rootDir>/build/jest/coverage",
	"cacheDirectory": "<rootDir>/build/jest/cache"
}
