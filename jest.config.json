{
	"moduleFileExtensions": [
		"ts",
		"js"
	],
	"transform": {
		"^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
	},
	"testMatch": [
		"**/__tests__/**/*.test.(ts|js)"
	],
	"modulePaths": ["<rootDir>/src"],
	"testEnvironment": "node",
	"coverageDirectory": "./build/jest/coverage",
	"cacheDirectory": "./build/jest/cache"
}
