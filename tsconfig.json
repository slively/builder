{
	"compilerOptions": {
		"outDir": "dist",
		"declaration": true,
		"target": "es2015",
		"module": "commonjs",
		"sourceMap": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"lib": [
			"es2017"
		]
	},
	"include": [
		"src/**/*"
	]
}
